<form class= "spell-form" id="edit-spell" method="post" action="/spells">
    <input id="name" type="text" name="name" value="Spell Name" />
      <div class="same-row">
        <label for="school-select"><p>School:</p></label>
        <select id="school-select" name="school">
          <% @schools.each do |school| %>
          <option class= "school" value="<%=school%>"> <%=school%> </option>
          <% end %>
        </select>
      </div>
      <div class="same-row">
        <label for="level"><p>Level:</p></label>
        <input id="level" type="number" name="level" value="0" />
      </div>
    <textarea name="description" form="edit-spell"> Enter description </textarea>
    <div class="buttons">
      <a href="/spells"><button>Discard Changes</button></a>
      <input type="submit" value="Create Spell" />
    </div>
</form>
