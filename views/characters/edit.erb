<fieldset>
<legend>Edit Character</legend>
<form id="edit-character" method="post" action="/characters/<%=@character.id%>">

  <label for="name">Name:</label>
  <input id="name" type="text" name="name" value="<%=@character.name%>" />

  <label for="class-select">Class:</label>
  <select id="class-select" name="c_class">
    <% @classes.each do |c_class| %>
    <option value="<%=c_class%>" <% "selected" if @character.c_class == c_class %> > <%=c_class%> </option>
    <% end %>
  </select>

  <label for="level">Level</label>
  <input id="level" type="number" name="level" value="<%=@character.level%>" />
  <label for="writing-skill">Writing Skill</label>
  <input id="writing-skill" type="number" name="writing_skill" value="<%=@character.writing_skill%>" />

  <input type="submit" value="Update Character" />
</form>
</fieldset>
